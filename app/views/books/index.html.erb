<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
       <%= render 'layouts/errors', obj: @book %>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="6"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user) do %>
            <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td>フォロー: <%= book.user.followings.count %></td>
        <td>フォロワー: <%= book.user.followers.count %></td>
       <td id="favorite_buttons_<%= book.id %>">
     <%= render "favorites/favorite", book: book %>
       </td>
            <td>
              コメント：<%= book.book_comments.count %>
            </td>
         <td> <% if current_user != book.user %>
                <% if current_user.following?(book.user) %>
                    <%= link_to "フォローを外す",user_relationships_path(book.user.id), method: :delete %>
                <% else %>
                    <%= link_to "フォロー",user_relationships_path(book.user.id), method: :post %>
                  <% end %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

    </div>
  </div>
</div>

